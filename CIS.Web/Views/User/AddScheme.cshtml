@model CIS.Models.Scheme

@{
    ViewData["Title"] = "AddScheme";
    Layout = "~/Views/Shared/_User.cshtml";
}

<h1>AddScheme</h1>

<h4>Scheme</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddScheme">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SchemeName" class="control-label"></label>
                <input asp-for="SchemeName" class="form-control" type="Scheme Name"/>
                <span asp-validation-for="SchemeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SchemeDescription" class="control-label"></label>
                <textarea asp-for="SchemeDescription" class="form-control" ></textarea>
                <span asp-validation-for="SchemeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
