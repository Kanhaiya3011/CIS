@model CIS.Models.SchemeViewModel

@{
    ViewData["Title"] = "AddScheme";
    Layout = "~/Views/Shared/_Admin.cshtml";
    var user = TempData["LoggedInUser"];
}

<h1>AddScheme</h1>

<h4>Scheme</h4>
<hr />
<div class="welcome-message">
    <p>Welcome : @user</p>
</div>
<div class="row">
    <div>
        <form asp-action="AddScheme" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="scheme.SchemeName" class="control-label"></label>
                <input asp-for="scheme.SchemeName" class="form-control" />
                <span asp-validation-for="scheme.SchemeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Category</label><br />
                <select asp-for="scheme.Category.Id"
                        asp-items="@(new SelectList(Model.categories, nameof(CIS.Models.Category.Id), nameof(CIS.Models.Category.CategoryName)))">
                    <option>Please select one</option>
                </select>
                <span asp-validation-for="scheme.Category.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="scheme.SchemeDescription" class="control-label"></label>
                <textarea asp-for="scheme.SchemeDescription" class="form-control text-area"></textarea>
                <span asp-validation-for="scheme.SchemeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

